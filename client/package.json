{
    "name": "TDLS",
    "description": "The vsc extension for dls(Dialogue Line Script):)",
    "author": "RocetPunch Games",
    "license": "MIT",
    "version": "0.1.2",
    "publisher": "tezikazhou",
    "engines": {
        "vscode": "^1.8.0"
    },
    "categories": [
        "Languages",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:tdls"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "tdls",
                "extensions": [
                    ".tdls",
                    ".dls"
                ],
                "aliases": [
                    "TDLS",
                    "tdls"
                ]
            }
        ],
        "grammars": [
            {
                "language": "tdls",
                "scopeName": "source.tdls",
                "path": "./syntaxes/tdls.tmLanguage.json"
            }
        ],
        "themes": [
            {
                "label": "TDLS For Designer",
                "id": "TDLS_DES",
                "uiTheme": "vs-dark",
                "path": "./themes/TDLS Color theme-color-theme.json"
            }
        ],
        "snippets": [
            {
                "language": "tdls",
                "path": "./snippets/tdls.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the languageServerExample service."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.33",
        "@types/node": "^8.0.28",
        "typescript": "^2.5.2",
        "vscode": "^1.0.3"
    },
    "dependencies": {
        "telp": "^1.0.8",
        "vscode-languageclient": "^3.1.0"
    }
}
